<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/logo_btec"
            android:contentDescription="image'sbudget"
            android:id="@+id/imgBudget" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameBudget"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_toEndOf="@id/imgBudget"
            android:text="Tien nha tro"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMoneyBudget"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgBudget"
            android:layout_below="@id/tvNameBudget"
            android:text="3,000,000"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>